{
    "name": "flux",
    "displayName": "flux",
    "description": "Flux Language Support (Xtext Language Server for Flux)",
    "version": "0.0.1",
    "publisher": "katauber",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:flux"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "flux",
                "aliases": [
                    "flux"
                ],
                "extensions": [
                    ".flux"
                ],
                "configuration": "./flux.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "flux",
                "scopeName": "text.flux",
                "path": "./flux.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^3.4.3",
        "vscode": "^1.0.0",
        "@types/node": "^12.12.2"
    },
    "dependencies": {
        "vscode-languageclient": "^3.0.3"
    }
}
